<resources>
    <style name="LabelStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="ValueStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Стиль для заголовка приложения -->
    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для заголовка расписания -->
    <style name="ScheduleTitle">
        <item name="android:textSize">24sp</item> <!-- Увеличиваем размер текста -->
        <item name="android:textStyle">bold</item> <!-- Делаем текст жирным -->
        <item name="android:textColor">@color/colorPrimary</item> <!-- Используем основной цвет приложения -->
        <item name="android:paddingBottom">16dp</item> <!-- Отступ снизу -->
        <item name="android:layout_width">match_parent</item> <!-- Ширина на весь экран -->
        <item name="android:layout_height">wrap_content</item> <!-- Высота по содержимому -->
    </style>
</resources>
